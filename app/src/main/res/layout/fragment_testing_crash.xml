<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="16dp"
            android:paddingTop="8dp"
            android:text="Log saving location"
            android:textColor="@color/primary"
            android:textFontWeight="500"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/switch_internal_storage"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:foreground="?android:selectableItemBackground"
            android:paddingStart="24dp"
            android:paddingEnd="16dp"
            android:switchPadding="16dp"
            android:text="[internal storage]/logs"
            android:textSize="20dp" />

        <Switch
            android:id="@+id/switch_external_storage"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:foreground="?android:selectableItemBackground"
            android:paddingStart="24dp"
            android:paddingEnd="16dp"
            android:switchPadding="16dp"
            android:text="[external storage]/logs"
            android:textSize="20dp" />

        <Switch
            android:id="@+id/switch_downloads"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:foreground="?android:selectableItemBackground"
            android:paddingStart="24dp"
            android:paddingEnd="16dp"
            android:switchPadding="16dp"
            android:text="/Download/Fishnet"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:alpha="0.2"
            android:background="@color/text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="16dp"
            android:paddingTop="8dp"
            android:text="Java crashes"
            android:textColor="@color/primary"
            android:textFontWeight="500"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_test_java_crash"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="RuntimeException"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_test_java_thread_crash"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="RuntimeException in thread"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_test_anr"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="Thread.sleep ANR"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="16dp"
            android:paddingTop="8dp"
            android:text="Native crashes"
            android:textColor="@color/primary"
            android:textFontWeight="500"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_test_native_nullptr"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="Null pointer dereference"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_test_native_jni_error"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="JNI error"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_test_native_too_many_open_files"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="Too many open files (ANR)"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_test_native_buffer_overflow"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="Buffer overflow (FORTIFY)"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_test_native_scudo_error"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="* Scudo error"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_test_native_fdsan"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="fdsan"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:alpha="0.2"
            android:background="@color/text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:fontFamily="@font/jetbrains_mono"
                android:text="Author: Kyant"
                android:textColor="@color/primary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:fontFamily="@font/jetbrains_mono"
                android:text="License: Apache-2.0"
                android:textColor="@color/primary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:fontFamily="@font/jetbrains_mono"
                android:text="GitHub: Kyant0/Fishnet"
                android:textColor="@color/primary"
                android:textIsSelectable="true"
                android:textSize="13sp"
                android:textStyle="bold"
                android:typeface="monospace" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>