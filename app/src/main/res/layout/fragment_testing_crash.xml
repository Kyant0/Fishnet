<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="16dp"
            android:paddingTop="8dp"
            android:text="Java crashes"
            android:textColor="@color/primary"
            android:textFontWeight="500"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_test_java_crash"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="RuntimeException"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_test_java_thread_crash"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="RuntimeException in thread"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_test_java_deep_exception"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="Deep exception"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_test_anr"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="Thread.sleep ANR"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="16dp"
            android:paddingTop="8dp"
            android:text="Native crashes"
            android:textColor="@color/primary"
            android:textFontWeight="500"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btn_test_native_nullptr"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="Null pointer dereference"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_test_native_jni_error"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="JNI error"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_test_native_deadlock"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="Deadlock (ANR)"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_test_native_too_many_open_files"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="Too many open files (ANR)"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_test_native_buffer_overflow"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="Buffer overflow (FORTIFY)"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_test_native_scudo_error"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="* Scudo error"
            android:textColor="@color/text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn_test_native_fdsan"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:text="fdsan"
            android:textColor="@color/text"
            android:textSize="20dp" />

    </LinearLayout>

</ScrollView>